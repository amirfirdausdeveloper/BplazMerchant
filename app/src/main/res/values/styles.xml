<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBplaz</item>
        <item name="colorPrimaryDark">@color/colorBplaz2</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!--THEME BPLAZ NO ACTIONBAR-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBplaz</item>
        <item name="colorPrimaryDark">@color/colorBplaz2</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>
    <style name="AppThemeNoActionBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>
    <style name="AppThemeNoActionBarKuning" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorKuning</item>
        <item name="colorPrimaryDark">@color/colorKuning</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!--NAVIGATION BAR BOTTOM FONT SIZE-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="queryBackground">@color/colorWhite</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/colorBlack</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorBlack</item>
    </style>

</resources>
